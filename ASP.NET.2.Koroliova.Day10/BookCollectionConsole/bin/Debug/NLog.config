<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Off" internalLogFile="c:\temp\nlog-internal.log" >


  <!-- optional, add some variabeles
  https://github.com/nlog/NLog/wiki/Configuration-file#variables
  -->

  <variable name="file" value="${date:format=dd.MM.yyyy HH\:mm\:ss} (${level:uppercase=true}): ${message}" /> 
  <variable name="console" value="${date:format=dd.MM.yyyy HH\:mm\:ss} (${level:uppercase=true}): ${message}" /> 

  <!-- 
  See https://github.com/nlog/nlog/wiki/Configuration-file 
  for information on customizing logging rules and outputs.
   -->
  <targets>
  <target name="file1" xsi:type="File" fileName="${basedir}/NlogInfo.txt" layout="${file}" /> 
  <target name="file2" xsi:type="File" fileName="${basedir}/NlogErrors.txt" layout="${file}" /> 
  <target name="console" xsi:type="ColoredConsole" layout="${console}" /> 
  </targets>

  <rules>
  <logger name="*" minlevel="Info" writeTo="file1" /> 
  <logger name="*" minlevel="Warn" writeTo="console" /> 
  <logger name="*" minlevel="Debug" writeTo="console,file1" /> 
  <logger name="*" minlevel="Error" writeTo="file2" />
  <logger name="*" minlevel="Fatal" writeTo="file2" />
  </rules>
</nlog>