
@model MvsPL.Models.TestViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>
    <script src="~/Scripts/jquery-1.9.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    
    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
    
        <fieldset>
            <legend>Create new test</legend>
    
            <div class="editor-label">
                @Html.LabelFor(model => model.Title)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Title)
                @Html.ValidationMessageFor(model => model.Title)
                
            </div>
    
            <div class="editor-label">
                @Html.LabelFor(model => model.ShortDescription)
            </div>
            <div class="editor-field">
                @Html.TextAreaFor(model => model.ShortDescription,"Enter short description.")
                @*@Html.EditorFor(model => model.ShortDescription)*@
                @Html.ValidationMessageFor(model => model.ShortDescription)
            </div>
    
            <div class="editor-label">
                @Html.LabelFor(model => model.TimeToComplete)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.TimeToComplete)
                @Html.ValidationMessageFor(model => model.TimeToComplete)
            </div>
 
            <div class="editor-label">
                @Html.LabelFor(model => model.Category)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Category)
                @Html.ValidationMessageFor(model => model.Category)
            </div>
            
            <p>
                @Html.Submit("Create")
            </p>
        </fieldset>
    }
    
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</body>
</html>
