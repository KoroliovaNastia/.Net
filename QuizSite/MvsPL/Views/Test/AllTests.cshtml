@model PagedList.IPagedList<MvsPL.Models.TestViewModel>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@{
    ViewBag.Title = "AllTests";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>All Tests</h2>

    @foreach (var item in Model)
    {
        
       <h3> @Html.ActionLink(item.Title, "GetTest", new { item.Id })</h3>
    }
<p>
    @Html.ActionLink("Add new test", "Create").If(User.IsInRole("Administrator"))
    @Html.ActionLink("Go home", "Index")
</p>
Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

@Html.PagedListPager(Model, page => Url.Action("AllTests", new { page }))